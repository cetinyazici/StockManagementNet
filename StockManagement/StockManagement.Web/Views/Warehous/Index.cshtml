@model List<Warehouse>
@{
    ViewData["Title"] = "Warehouse List";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}
<div class="pagetitle">
    <h1>Warehouse</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">Dashboard</a></li>
            <li class="breadcrumb-item active">Warehouse</li>
        </ol>
    </nav>
</div>
<h1 class="text-center">
    <i class="bi bi-building"></i>
    Warehouse Page
</h1>

<div class="my-3">
    <a href="/Warehous/AddWarehouse" class="btn btn-primary">
        <i class="bi bi-arrow-up"></i>
        New Warehouse
    </a>
</div>

<div class="row mt-5">
    <div class="col">
        <div class="table-responsive">
            <table id="myTable" class="table table-striped table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th>#</th>
                        <th>Name</th>
                        <th>Location</th>
                        <th>UPDATE</th>
                        <th>DELETE</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Name</td>
                            <td>@item.Location</td>
                            <td>
                                <a asp-controller="Warehous" asp-action="UpdateWarehouse" asp-route-id="@item.Id" class="btn btn-success">
                                    <i class="bi bi-pencil"></i>
                                    UPDATE
                                </a>
                            </td>
                            <td>
                                <a asp-controller="Warehous" asp-action="DeleteWarehouse" asp-route-id="@item.Id" class="btn btn-danger btn-delete-warehouse">
                                    <i class="bi bi-trash"></i>
                                    DELETE
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
