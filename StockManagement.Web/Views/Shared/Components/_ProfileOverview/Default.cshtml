@model UserInformationDTO
<div class="tab-pane fade show active profile-overview" id="profile-overview">
    <h5 class="card-title">About</h5>
    <p class="small fst-italic">
        I am on a continuous journey of learning and development in the world of software.
        My future goals include mastering new technologies and participating in large-scale projects.
        Being part of a collaborative and innovative work environment excites me.
    </p>


    <h5 class="card-title">Profile Details</h5>

    <div class="row">
        <div class="col-lg-3 col-md-4 label ">User Name</div>
        <div class="col-lg-9 col-md-8">@Model.Name</div>
    </div>

    <div class="row">
        <div class="col-lg-3 col-md-4 label">Email</div>
        <div class="col-lg-9 col-md-8">@Model.Email</div>
    </div>

</div>