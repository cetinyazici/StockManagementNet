@model List<AppRole>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}
<div class="pagetitle">
    <h1>AppRole</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">Dashboard</a></li>
            <li class="breadcrumb-item active">AppRole</li>
        </ol>
    </nav>
</div>
<h1 class="text-center">
    <i class="bi bi-shield-lock"></i>
    AppRole Page
</h1>

<div class="my-3">
    <a href="/Role/CreateRole" class="btn btn-primary">
        <i class="bi bi-arrow-up"></i>
        New AppRole
    </a>
</div>

<div class="row mt-5">
    <div class="col">
        <div class="table-responsive">
            <table id="myTable" class="table table-striped table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th>#</th>
                        <th>RoleName</th>
                        <th>UPDATE</th>
                        <th>DELETE</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Name</td>
                            <td>
                                <a asp-controller="Role" asp-action="UpdateRole" asp-route-id="@item.Id" class="btn btn-success">
                                    <i class="bi bi-pencil"></i>
                                    UPDATE
                                </a>
                            </td>
                            <td>
                                <a asp-controller="Role" asp-action="DeleteRole" asp-route-id="@item.Id" class="btn btn-danger btn-role-delete">
                                    <i class="bi bi-trash"></i>
                                    DELETE
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

