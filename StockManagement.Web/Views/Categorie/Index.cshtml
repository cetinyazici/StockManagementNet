@model List<Category>
@{
    ViewData["Title"] = "Category List";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}

<div class="pagetitle">
    <h1>Category</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">Dashboard</a></li>
            <li class="breadcrumb-item active">Category</li>
        </ol>
    </nav>
</div>
<h1 class="text-center">
    <i class="bi bi-tags"></i>
    Category Page
</h1>

<div class="my-3">
    <a href="/Categorie/AddCategorie" class="btn btn-primary">
        <i class="bi bi-arrow-up"></i>
        New Category
    </a>
</div>

<div class="row mt-5">
    <div class="col">
        <div class="table-responsive">
            <table id="myTable" class="table table-striped table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th>#</th>
                        <th>CategoryName</th>
                        <th>UPDATE</th>
                        <th>DELETE</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.CategoryName</td>
                            <td>
                                <a asp-controller="Categorie" asp-action="UpdateCategorie" asp-route-id="@item.Id" class="btn btn-success">
                                    <i class="bi bi-pencil"></i>
                                    UPDATE
                                </a>
                            </td>
                            <td>
                                <a asp-controller="Categorie" asp-action="DeleteCategorie" asp-route-id="@item.Id" class="btn btn-danger btn-delete">
                                    <i class="bi bi-trash"></i>
                                    DELETE
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>